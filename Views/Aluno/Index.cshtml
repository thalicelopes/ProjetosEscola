@model IEnumerable<ProjetosEscola.Models.Aluno>

@{
    ViewData["Title"] = "Index";
}

<h1>Visão de Alunos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar um novo aluno</a>
</p>
<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>
                Nome do Aluno
            </th>
            <th>
                Matrícula
            </th>
            <th>
                Período
            </th>
            <th> Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeAluno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Periodo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Ver detalhes</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
