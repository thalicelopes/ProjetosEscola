@model IEnumerable<ProjetosEscola.Models.Orientacao>

@{
    ViewData["Title"] = "Index";
}

<h1>Visão de Orientações</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar nova orientação</a>
</p>
<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>
                Nome do Projeto
            </th>
            <th>
                Prazo
            </th>
            <th>
                Aluno
            </th>
            <th>
                Professor
            </th>
            <th> Ações </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeProjeto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataLimite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aluno.NomeAluno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Professor.NomeProfessor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Ver Detalhes</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
