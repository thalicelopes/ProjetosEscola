@model ProjetosEscola.Models.Professor

@{
    ViewData["Title"] = "Create";
}

<h1>Criar novo professor</h1>

<h4>Por favor, preencha os campos abaixo:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Nome do Professor:</label>
                <input asp-for="NomeProfessor" class="form-control" />
                <span asp-validation-for="NomeProfessor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Matrícula do Professor:</label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Área de atuação do Professor:</label>
                <input asp-for="AreaAtuacao" class="form-control" />
                <span asp-validation-for="AreaAtuacao" class="text-danger"></span>
            </div><br/>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista principal</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
